# Example Environment Configuration
# Copy this file to .env and fill in your credentials

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=algotrading
DB_USER=postgres
DB_PASSWORD=your_password_here

# ============================================
# Fyers API (Optional - for live data)
# ============================================
FYERS_APP_ID=your_app_id_here
FYERS_SECRET_KEY=your_secret_key_here
FYERS_ACCESS_TOKEN=your_access_token_here

# ============================================
# OpenRouter API (Optional - for AI features)
# ============================================
OPENROUTER_API_KEY=your_openrouter_key_here

# ============================================
# Application Settings
# ============================================
PORT=8000
DEBUG=False
HAS_FYERS=False

# ============================================
# Agentic Trader (LiteLLM)
# ============================================
# Providers: groq, openai, anthropic, cerebras
MODEL_PROVIDER=groq
LITELLM_MODEL=groq/llama-3.1-70b-versatile
GROQ_API_KEY=gsk_...
